/* pages/mods2/mods2.wxss */
.chat-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
  }
  
  .chat-list {
    flex: 1;
    overflow-y: auto;
  }
  
  .messages {
    padding: 10px;
  }
  
  .message {
    padding: 10px;
    border-radius: 10px;
    margin-bottom: 10px;
  }
  
  .message.user {
    background-color: #007AFF;
    color: white;
    align-self: flex-end;
  }
  
  .input-area {
    display: flex;
    padding: 10px;
    background-color: #F5F5F5;
  }
  
  .message-input {
    flex: 1;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  .send-button {
    margin-left: 10px;
    padding: 5px 10px;
    background-color: #007AFF;
    color: white;
    border: none;
    border-radius: 5px;
  }