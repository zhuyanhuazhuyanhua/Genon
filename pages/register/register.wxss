/* pages/register/register.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(to bottom, #f5f5f5, #ffffff);
}
.input-style{
  
    border: 1px solid #ccc; /* 添加边框，颜色为灰色 */
    border-radius: 3px; /* 添加圆角 */
    padding: 0px; /* 添加内边距 */
    padding-left: 10px; 
    width: 100%; /* 输入框宽度 */
    box-sizing: border-box; /* 确保边框和内边距包含在宽度内 */
  
}
.button-style {
  background-color: #4CAF50;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
}