/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
}
/* index.wxss */


.input-empty {
  border: 1rpx solid rgb(221, 166, 166);
  border-radius: 10rpx;
  padding: 10rpx;
  margin: 10rpx;
}

.input-filled {
  border: 1rpx solid rgb(207, 241, 217);
  border-radius: 10rpx;
  padding: 10rpx;
  margin: 10rpx;
}
.login {
  width: 200px;
  height: 40px;
  background-color: #1eff00;
  color: #fff;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}
.share {
  width: 200px;
  height: 40px;
  background-color: #ff5e00;
  color: #fff;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}


.btn{
  /* 透明的 */
  background-color: transparent;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;

}
/* 去掉边框 */
.btn::after{
  border: none;
}

.photo{
  height: 250rpx;
  width: 250rpx;
  border-radius: 50%;
}

/* 在微信小程序的.wxss 文件中 */
.button-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.button-container button {
  background-color: #4CAF50;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
}

.hidden {
  display: none;
  height: 0;
  width: 0;
  margin: 0;
  padding: 0;
  overflow: hidden;
}
text {
  margin-top: 20px;
  font-size: 14px;
  color: red;
}