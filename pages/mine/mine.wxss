.container {
  padding: 20rpx;
  background: linear-gradient(to bottom, #f5f5f5, #ffffff);
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}


.btn{
  /* 透明的 */
  background-color: transparent;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;

}
/* 去掉边框 */
.btn::after{
  border: none;
}

.photo{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}

.input-empty {
  border: 1rpx solid rgb(161, 28, 28);
  border-radius: 10rpx;
  padding: 10rpx;
  margin: 10rpx;
}

.input-filled {
  border: 1rpx solid rgb(207, 241, 217);
  border-radius: 10rpx;
  padding: 10rpx;
  margin: 10rpx;
}
.phoneNumber{
  font-size: 25rpx; /* 在这里设置字体大小，可根据需要调整 */
  border-radius: 10rpx;
  padding: 9rpx;
  margin: 9rpx;
  color: #435344;
}

/* 在微信小程序的.wxss 文件中 */
.button-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.button-container button {
  background-color: #4CAF50;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
}

.hidden {
  display: none;
  height: 0;
  width: 0;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

.menu {
  margin-top: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.menu-item .icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.menu-item text {
  font-size: 32rpx;
  color: #555;
}
